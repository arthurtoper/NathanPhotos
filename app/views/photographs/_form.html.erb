<%= form_for [@gallery, @photo] do |f| %>
	<legend><%= form_title %></legend>
	<fieldset>
		<div>
			<%= f.label :image, 'Image' %>
			<%= f.file_field :image %>
		</div>

		<div class="form-actions">
			<%= f.submit form_submit %> or <%= link_to 'Cancel', @gallery %>
		</div>
	</fieldset>
<% end %>