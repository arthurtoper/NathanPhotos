<%= form_for @gallery do |f| %>
	<legend><%= form_title %></legend>
	<fieldset>
		<div>
			<%= f.label :name, 'Name' %>
			<%= f.text_field :name %>
		</div>

		<div>
			<%= f.label :description, 'Description (optional)' %>
			<%= f.text_area :description %>
		</div>

		<div class="form-actions">
			<%= f.submit form_submit %> or <%= link_to 'Cancel', galleries_path %>
		</div>
	</fieldset>
<% end %>