<% content_for :nav do %>
	<%= render 'layouts/nav', page: :admin %>
<% end %>

<% if @user_is_admin %>
	<h2>Admin</h2>
	<ul>
		<li><%= link_to 'Manage Galleries', admin_galleries_path %></li>
	</ul>
<% else %>

	<h2>Log In</h2>

	<%= form_tag(admin_login_path, class: 'admin') do %>

	<fieldset>
		<legend>Enter your details</legend>

		<div class="field">
			<%= label_tag :username %>
			<%= text_field_tag :username, params[:username] %>
		</div>

		<div class="field">
			<%= label_tag :password %>
			<%= password_field_tag :password %>
		</div>

		<div class="field form-actions">
			<%= submit_tag 'Log In' %>
		</div>
		
		<div class="clear"></div>

	</fieldset>

	<% end %>
<% end %>