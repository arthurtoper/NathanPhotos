<% content_for :nav do %>
	<%= render 'layouts/nav', page: :admin %>
<% end %>

<% if @user_is_admin %>
	hurrah!
<% else %>

	<h2>Log In</h2>

	<%= form_tag admin_login_path do %>

		<div class="field">
			<%= label_tag :username %>
			<%= text_field_tag :username, params[:username] %>
		</div>

		<div class="field">
			<%= label_tag :password %>
			<%= password_field_tag :password %>
		</div>

		<div class="field">
			<%= submit_tag 'Log In' %>
		</div>
		
		<div class="clear"></div>

	<% end %>
<% end %>